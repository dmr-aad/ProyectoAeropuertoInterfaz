<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="aeropuertos_interfaz.objetos.Reserva" table = "reservas">
      <composite-id>
          <key-many-to-one name = "pasajero" class = "aeropuertos_interfaz.objetos.Pasajero"/>
          <key-many-to-one name = "vuelo" class = "aeropuertos_interfaz.objetos.Vuelo"/>
      </composite-id>
      <property name = "clase"/>
      <property name="asiento"/>
  </class>
</hibernate-mapping>
