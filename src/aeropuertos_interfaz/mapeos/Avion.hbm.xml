<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="aeropuertos_interfaz.objetos.Avion" table = "aviones">
      <id name="idAvion">
          <generator class="identity"/>
      </id>
      <property name="modelo"/>
      <property name="cantidadPasajeros"/>
      
      <many-to-one name="aerolinea" class="aeropuertos_interfaz.objetos.Aerolinea">
          <column name="codigoAerolinea" not-null="true"/>
      </many-to-one>
      
      <set name="Vuelos" table="vuelos" cascade="all" inverse="true" lazy="false">
          <key>
              <!-- Posible error -->
              <column name ="idAvion" not-null="true"/>
          </key>
          
          <one-to-many class ="aeropuertos_interfaz.objetos.Vuelo"/>
      </set>
     
  </class>
</hibernate-mapping>
